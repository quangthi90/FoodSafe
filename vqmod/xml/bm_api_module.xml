<modification>
	<id>MODULE API</id>
	<version>1.4.x and 1.5.x</version>
	<vqmver required="true">2.4.0</vqmver>
	<author>lqthi.khtn@gmail.com</author>

	<file name="catalog/controller/common/home.php">
		<operation>
			<search position="before"><![CDATA[
				$data['column_left'] = $this->load->controller('common/column_left');
			]]></search>
			<add><![CDATA[
				$cat_data = $this->load->api('module/home_category', array(
					'is_system_call' => true
				));

				if (file_exists(DIR_TEMPLATE . $this->config->get('config_template') . '/template/api/module/home_category.tpl')) {
					$data['categories'] = $this->load->view($this->config->get('config_template') . '/template/api/module/home_category.tpl', $cat_data);
				} else {
					$data['categories'] = $this->load->view('default/template/api/module/home_category.tpl', $cat_data);
				}
			]]></add>
		</operation>
	</file>

</modification>